<script src='/product.js'></script>
<form class='a' action="/doctor/editdelete" >
 <div class='b'>
    <h1>Edit/Delete  Doctor Data</h1>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>First name</i></b></label>
      <input type="text" class="form-control is-valid"   name='fn'value='<%=data[0].name%>' >
      
    </div>
    <div class="col-md-6 mb-3">
      <label ><b><i>ID</i></b></label>
      <input type="text" class="form-control is-valid"  placeholder='ID' name='id'value='<%=data[0].doctorid%>' readonly >
      
    </div>
    
    
  </div>
  <div class="form-row">
    <div class="col-md-12 ">
      <label ><b><i>Date Of Birth</i></b></label>
      <input type="date" class="form-control is-valid"  name='dob' value='<%=data[0].dob%>'>
      </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>State</i></b></label>
      <select name="st" class="form-control" id='st'>
        <option value='<%=data[0].state%>'><%=data[0].statename%> </option>
        </select>
      
    </div>
    <div class="col-md-3 mb-3">
      <label><b><i>City</i></b></label>
      <select name='ct' class="form-control" id='ct'>
        <option value='<%=data[0].city%>'><%=data[0].cityname%> </option>
    </select>

     
    </div>
    <div class="col-md-3 mb-3">
      <label ><b><i>Zip Code</i></b></label>
      <input type="text" class="form-control is-valid" name='zip' placeholder='Enter Zip Code' value='<%=data[0].zip%>' >
      
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 ">
      <label ><b><i>Address</i></b></label>
      <textarea  class="form-control is-valid"  name='add' placeholder='Enter Address'  ><%=data[0].address%></textarea>
      </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>Email Id</i></b></label>
      <input type="email" class="form-control is-valid" name='em'placeholder='xyz@gmail.com' value='<%=data[0].email%>'  >
      
    </div>
    <div class="col-md-3 mb-3">
      <label><b><i>Contact Number</i></b></label>
      <input type="number" class="form-control is-valid" name='cn' placeholder='Enter number' value='<%=data[0].number1%>'>
     
    </div>
    <div class="col-md-3 mb-3">
      <label ><b><i>Alternate Number</i></b></label>
      <input type="text" class="form-control is-valid" name='an'placeholder='Enter number' value='<%=data[0].number2%>' >
      
    </div>
  </div>
  <div>
<%if (data[0].gender=='Male'){%>
  
  <label><b><i>Gender</i></b></label><br>
  <div class="form-check form-check-inline">
    <input class="form-check-input" checked type="radio" name="ge"  value="Male">Male
    <input class="form-check-input" type="radio" name="ge"  value="Female">Female
  </div>
  <%}else{%>
    <label><b><i>Gender</i></b></label><br>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="ge"  value="Male" >Male
    <input class="form-check-input" type="radio" name="ge"  value="Female" checked>Female
 
   
  </div>
  <%}%>
  </div>

  <center>
  
  <button class="btn btn-success" type="submit" value='Edit' name='btn'>Edit </button>
  <button class="btn btn-success" type="submit" value='Delete' name='btn'>Delete</button></center>
</div>

</div>
</form>

