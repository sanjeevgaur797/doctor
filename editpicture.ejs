<form class='a' action="/doctor/updatepicture"  method="POST" enctype='multipart/form-data'>
 <div class='b'>
    <h1>Update Picture</h1>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>First name</i></b></label>
      <input type="text" class="form-control is-valid"  placeholder='First Name' name='fn'value='<%=data[0].name%>' >
      
    </div>
    <div class="col-md-6 mb-3">
      <label ><b><i>ID</i></b></label>
      <input type="text" class="form-control is-valid"  placeholder='ID' name='id'value='<%=data[0].doctorid%>' readonly >
      
    </div>
    
    <div class="col-md-6 mb-3">
       
        <img  src='/images/<%=data[0].picture%>'  value='<%=data[0].picture%>' width='200px' height='200px' >
        
      </div>
      
      <div class="col-md-6 mb-3">
        <label ><b><i>Picture</i></b></label>
        <input type="file" class="form-control is-valid"  name='picture'  >
        
      </div>
    
  </div>
  
  <center>
  
  <button class="btn btn-success" type="submit" value='Edit' name='btn'>Edit </button>
</center>
</div>

</div>
</form>

