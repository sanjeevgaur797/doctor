<form class='a' action="/doctor/submit" method='post' enctype="multipart/form-data">
 <div class='b'>
    <h1>Registration Form</h1>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>First name</i></b></label>
      <input type="text" class="form-control is-valid"  placeholder='First Name' name='fn' >
      
    </div>
    <div class="col-md-6 mb-3">
      <label ><b><i>Last name</i></b></label>
      <input type="text" class="form-control is-valid" placeholder='Last Name' name='ln' >
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 ">
      <label ><b><i>Date Of Birth</i></b></label>
      <input type="date" class="form-control is-valid"  name='dob' >
      </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>State</i></b></label>

      <select class="form-control is-valid" name='st' id='st'>
        <option>select state</option>
      </select>
    </div>
    <div class="col-md-3 mb-3">
      <label><b><i>City</i></b></label>
      
      <select class="form-control is-valid" name='ct' id='ct'>
        <option>select city</option>
      </select>
    </div>
    <div class="col-md-3 mb-3">
      <label ><b><i>Zip Code</i></b></label>
      <input type="text" class="form-control is-valid" name='zip' placeholder='Enter Zip Code' >
      
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 ">
      <label ><b><i>Address</i></b></label>
      <textarea  class="form-control is-valid"  name='add' placeholder='Enter Address' ></textarea>
      </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label ><b><i>Email Id</i></b></label>
      <input type="email" class="form-control is-valid" name='em'placeholder='xyz@gmail.com'  >
      
    </div>
    <div class="col-md-3 mb-3">
      <label><b><i>Contact Number</i></b></label>
      <input type="number" class="form-control is-valid" name='cn' placeholder='Enter number' >
     
    </div>
    <div class="col-md-3 mb-3">
      <label ><b><i>Alternate Number</i></b></label>
      <input type="text" class="form-control is-valid" name='an'placeholder='Enter number' >
      
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-12 ">
      <label ><b><i>Picture</i></b></label>
      <input type="file" class="form-control is-valid"  name='pic' >
      </div>
  </div>
  <br><label><b><i>Gender</i></b></label><br>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="ge"  value="Male">
    <label class="form-check-label" for="inlineRadio1">Male</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="ge"  value="Female">
    <label class="form-check-label" for="inlineRadio2">Female</label>
  </div>
  <center>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input is-valid" type="checkbox" required>
      <label class="form-check-label" for="invalidCheck3">
        Agree to terms and conditions
      </label>
      
    </div>
  </div>
  <button class="btn btn-success" type="submit">Submit </button>
  <button class="btn btn-success" type="reset">Reset</button></center>
  <h6><center><%=msg%></center></h6>

</div>
</form>

